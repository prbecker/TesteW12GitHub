@model RepositorioGitHub.Dominio.ActionResult<RepositorioGitHub.Dominio.GitHubRepositoryViewModel>
@{
    ViewBag.Title = "Home Page";
}


<h2>Meus Repositórios</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>Nome</th>
                <th>Proprietario</th>
                <th>Nome Completo</th>
                <th>URL</th>
                <th></th>
            </tr>

                @if (Model != null && Model.Results != null)
                {
                    foreach (var item in Model.Results)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Owner.Login)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Url)
                            </td>

                            <td>
                                @Html.ActionLink("Detalhe", "Details", new { id = item.Id })
                            </td>
                        </tr>
                    }
                }
        </table>      
    </div>
</div>

